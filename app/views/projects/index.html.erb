<div class="container-fluid">
  <div class="row">
    <div class="col-md-6 col-md-offset-3">
      <h1>Teams</h1>
      <div class="well">
        <h2><%= link_to 'Create New Team', new_project_path, class: 'btn btn-default btn-lg' %></h2>
        <p> trial period will expire in <span style="color:red"><%= remaining_days %> Days. </span><%= link_to "Suscribe Now!", signup_path(plan: @pro_plan.id) %></p>
        <table class="table table-striped">
          <% current_account.projects.each do |project| %>
            <tr>
              <td><%= link_to project.title, project_tasks_path(project) %></td>
              <td><%= project.details %></td>
            </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
</div>
