<%= form_for([@task.project, @task, @task.comments.build]) do |f| %>
   <p>
    <%= f.label :assigned %>
    <% options_from_collection_for_select(current_account.user_users, :name, :name) %>
    <%= f.collection_select(:owner, current_account.user_users, :name, :name) %>
  </p>
  <p>
    <%= f.label :body %><br>
    <%= f.text_area :body %>
  </p>
